@model IEnumerable<Jungle_Models.Country>

<div class="row pb-3 backgroundWhite">
  @if (Model.Count() > 0)
  {
    @foreach (var country in Model)
    {
      <div class="col-lg-3 col-md-6">
        <div class="row p-2">
          <div class="col-12  p-1" style="border:1px solid #008cba; border-radius: 5px;">
            <div class="card" style="border:0px;">
              <img src="/images/countries/default.png" class="card-img-top rounded" />
              <div class="pl-1">
                <p class="card-title h5"><b style="color:#2c3e50">@country.Name</b></p>
              </div>
              <div>
                <a asp-action="Details" class="btn btn-primary form-control" asp-route-id="@country.Id">Details</a>
              </div>
            </div>
          </div>
        </div>
      </div>
    }
  }
  else
  {
    <p>No country exists.</p>
  }
</div>

